<div id="content-header">
 <%= image_tag("/images/elibrary/library_small.png") %>
  <h1><%= t('e_library') %></h1>
  
</div>

<div class="tab-nav">
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

    <div id="news_title">
      <%= @books.title %>
    </div>
    <div id="create_date">
      <%= t('posted_on') %> <%= I18n.l(@books.created_at,:format=>"%A, %d %B, %Y") %>
    </div>
    

  <% if @current_user.admin? %>
    
      <%= link_to "► Edit Book",
        {:controller => "elibrary",  :action => "edit", :id => @books.id }, :class => "edit_button"%>
    
  <div id="">
      <%= link_to "► Delete Book",
        { :controller => "elibrary", :action => "delete", :id => @books.id },
        :confirm => "#{t('delete_confirm_msg')}", :class => "delete_button" %>
     
    </div>
  <div class="extender"></div>
  <% end %>

  

</div>