<div id="content-header">
  <%= image_tag("/images/elibrary/library_small.png") %>
  <h1><%= t('e_library') %></h1>
</div>

<div class="tab-nav">
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

  <% form_for(:books, :url => {:action=> 'add'}, :html=> {:multipart=>true}) do |f|  %>

    <%= error_messages_for :books %>

    <div id="add_news_form">
      <div class="news_label_field">
        <label for="title"><%= t('title') %></label>
        <div id="news_title_text_field_bg"><%= f.text_field :title %></div>
      </div>
      <div class="news_label_field">
        <label for="title"><%= t('subject') %></label>
        <div id="news_title_text_field_bg"><%= f.text_field :subject %></div>
      </div>

        <span class="span-sub-heading"><label for="title">Upload Book</label></span>
        <hr class="sub-heading"></hr>
        <div class="label-field-pair" >
         <p ><label for="upload_file">Select File</label>
<%= file_field 'upload', 'datafile', :style =>"height: 28px;" %></p>

        </div>
    </div>

    <%= submit_tag "", :value => "â–º Save", :class => "news_publish_button" %>

  <% end %>

</div>