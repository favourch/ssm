  <div id="news_no_result"><%= t('no_news') %></div>
<% else %>
  <% @books.each do |r| %>

      <div id="news_ajax_result">
    <% link_value = r.title %>
    <%=  link_to link_value, :controller => "elibrary", :action => 'view', :id => r.id%><br/>
    
  </div>
  <% end %>
<% end %>
