<div id="wrapper">
  <div id="top_logo">
    <% if FileTest.exists?("#{RAILS_ROOT}/public/uploads/image/institute_logo.jpg") %>
      <%= image_tag  "/uploads/image/institute_logo.jpg" ,:width => "155",  :height=>"107" %>
    <% else %>
        <%= image_tag("/images/application/app_fedena_logo.png") %>
    <% end %>
  </div>

  <div id="help_top">
    <div id="help_link"><a href="http://www.projectfedena.org/forum/" target="_blank"><%= t('help') %>!</a></div>
  </div>

  <div id="login_area_bg" class="cf">

    <% form_for :user do |form| %>

      <div id="login_area">
	  	<div class="login-header cf">
			<div><h1>Admin Login</h1></div>
			<div><%= image_tag("/images/application/login-icon.png") %></div>
		</div>
		<div class="login-wrap cf">
			
			<div id="username_textbox_bg" class="cf">
				<span class="user-icon"></span>
			  <%= form.text_field :username,
				:maxlength => 40%>
			</div>
	
			  
			<div id="password_textbox_bg" class="cf">
				<span class="user-pw"></span>
			  <%= form.password_field :password %>
			</div>
	
			<div id="checkbox_area">
			  <input type="checkbox" id="remember" />
			  <label for="remember"><%= t('remember_me') %></label>
			</div>
			
			<div id="submit_area">
			  <%= submit_tag t('login'), :class => "submit" %>
			</div>
			
			<div id="help_forgot_pw">
				<%= link_to t('forgot_password'),
				  :controller => "user",
				  :action => "forgot_password" %>
			</div>
			
			<% if !flash.empty? %>
			  <div id="notice"><%= flash[:notice] %></div>
			<% end %>
	
		  </div>
	  </div>
    </div>
  <% end %>

</div>

    <div id="footer">
      <div id="footer_logo">
            <div id="powered_by" class="cf">
          <!--<%= t('powered_by') %> <a href="smartschool.com" target="_blank">Smart Schools</a>-->
		  		<div class="ft-logo"><%= image_tag("/images/logo2.png") %></div>
        	</div>
          <!--<a href="smartschool.com" target="_blank" class="footer-logo"></a>-->

      </div>
    </div>

<script type="text/javascript">
document.getElementById('user_username').focus();
 </script>
