<div id="content-header">
  <%= image_tag("/images/homework/homework_small.png") %>
  <h1><%= t('daily_homework') %> &raquo; <span></span></h1>
  
</div>

<div class="tab-nav">
  <div id="app-back-button">
  <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>

<div id="inner-tab-menu">
  <ul>
    <li><%= link_to "#{t('view_all')}", :controller => 'homework', :action => 'all' %></li>
    <% if permitted_to? :add,:news %>
      <li><%= link_to "#{t('add')}", :controller => 'homework', :action => 'add' %></li>
    <% end %>
  </ul>
</div>
</div>
<div id="page-yield">





  <% unless @classhomeworks.empty? %>
    <div id="news_result">
      <% @classhomeworks.each_with_index do |r,i| %>
        <div id="news_search_result">
          <% link_value = r.title %>
          <%=  link_to link_value, :controller => "homework", :action => "view", :id => r.id%><br/>
          
        </div>
      <%= '<div class="extender"></div>' if i%3 == 2 %>
      <% end %>
    </div>
  <% end %>

  <div class="extender"></div>
</div>