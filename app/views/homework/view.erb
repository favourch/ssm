<div id="content-header">
<%= image_tag("/images/homework/homework_small.png") %>
  <h1><%= t('daily_homework') %> &raquo; <span></span></h1>
</div>

<div class="tab-nav">
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

    <div id="news_title">
      <%= @classhomeworks.title %>
    </div>
    
    <div id="news_content">
      <%= sanitize @classhomeworks.content , :tags => %w[b i a h1 h2 h3 u strike p img font span sup sub], :attributes => %w[href src style]%>
    </div>
  <% if @classhomeworks.attachment_file_name!=nil %>
  <div >
    Attachment: <%= link_to @classhomeworks.attachment_file_name, "../../system/homeworks/" + @classhomeworks.attachment_file_name  , :target => '_blank'%>
  </div>
  <% end %>

  <% if @current_user.admin? %>
    
      <%= link_to "► Edit Homework",
        {:controller => "homework",  :action => "edit", :id => @classhomeworks.id }, :class => "edit_button"%>
    
  <div id="">
      <%= link_to "► Delete Homework",
        { :controller => "homework", :action => "delete", :id => @classhomeworks.id },
        :confirm => "#{t('delete_confirm_msg')}", :class => "delete_button" %>
     
    </div>
  <div class="extender"></div>
  <% end %>

  
</div>