<div id="content-header">
 <%= image_tag("/images/homework/homework_small.png") %>
  <h1><%= t('daily_homework') %></h1>
</div>

<div class="tab-nav">
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

  <% form_for(:classhomeworks, :url => {:action=> 'add'}, :html=> {:multipart=>true}) do |f| %>
  

    <%= error_messages_for :classhomeworks %>

    <div id="add_news_form">
      <div class="text-input-bg">
        <%= select :classhomeworks, :batch_id,
          @batches.map {|b| [b.full_name, b.id]},
          {:prompt => "#{t('select_a_batch')}"},
          {:onChange => "#{remote_function(:url => {:action => "list_subjects"},
          :with => "'batch_id='+value",
          :before => "Element.show('loader')",
          :success => "Element.hide('loader')"
          )}"} %>
      </div>
      <div>
        <div id="subject-select" class="text-input-bg">
          <%= select :classhomeworks, :subject_id, @subjects.map{|subject| [subject.name,subject.id]},:prompt=>"#{t('select_subject')}" %>
        </div> <%= image_tag("loader.gif",
          :align => "absmiddle",
          :border => 0,
          :id => "loader",
          :style =>"display: none;" ) %>
      </div>
      <br/>
      <br/>
      <div class="student_admission_date">
          <label for="student_admission_date">Homework Date<span class="necessary-field">*</span> </label>
          <div class="text-input-bg-admission">
            <%= calendar_date_select_tag 'classhomeworks[date]', I18n.l(Date.today,:format=>:normal) %>
          </div>
        </div>
      <div class="news_label_field">
        <label for="title"><%= t('title') %></label>
        <div id="news_title_text_field_bg"><%= f.text_field :title %></div>
      </div>

      <div class="news_label_field">
        <label for="news_content"><%= t('content') %></label>
        <div id="news_content_text_field_bg"><%= fckeditor_textarea :classhomeworks, :content %></div>
      </div>
       <span class="span-sub-heading"><label for="title">Upload Attachment</label></span>
        <hr class="sub-heading"></hr>
        <div class="label-field-pair" >
         <p ><label for="upload_file">Select File</label>
<%= file_field 'upload', 'datafile', :style =>"height: 28px;" %></p>

        </div>
    </div>

    <%= submit_tag "", :value => "â–º Assign Homework", :class => "news_publish_button" %>

  <% end %>

</div>